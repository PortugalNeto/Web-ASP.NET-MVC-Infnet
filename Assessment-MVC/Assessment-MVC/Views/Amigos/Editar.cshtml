@model Amigo

<form action="/amigos/editar?id=@Model.AmigoId" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" name="nome" class="form-control" id="nome" value="@Model.nome" required>
    </div>
    <div class="form-group">
        <label for="sobrenome">Sobrenome</label>
        <input type="text" name="sobrenome" class="form-control" id="sobrenome" value="@Model.sobrenome">
    </div>
    <div class="form-group">
        <label for="data">Data de Aniversário</label>
        <input type="date" name="aniversario" class="form-control" id="data" value="@Model.aniversario" required>
    </div>
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>