@model Amigo

<form action="/amigos/excluirconfirma?id=@Model.AmigoId" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" readonly name="nome" class="form-control" id="nome" value="@Model.nome" required>
    </div>
    <div class="form-group">
        <label for="sobrenome">Sobrenome</label>
        <input type="text" readonly name="sobrenome" class="form-control" id="sobrenome" value="@Model.sobrenome">
    </div>
    <div class="form-group">
        <label for="data">Data de Aniversário</label>
        <input type="date" readonly name="aniversario" class="form-control" id="data" value="@Model.aniversario" required>
    </div>
    <button type="submit" class="btn btn-danger">Confirmar Exclusão</button>
</form>