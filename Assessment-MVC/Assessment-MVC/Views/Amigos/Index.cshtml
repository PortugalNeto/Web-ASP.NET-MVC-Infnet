@model List<Amigo>

@{
    ViewData["Title"] = "Home Page";
}

<h6>Bem-vindo ao sistema de amigos aniversariantes!</h6>

<form action="/" method="get">
<table class="table">
    <tbody>
        <tr>
            <td><div class="form-group">
                <input type="text" name="nome" class="form-control" id="nome" placeholder="Pesquisar por Amigo" required>
                </div>
            </td>
            <td><button type="submit" class="btn btn-primary">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                </svg>
                </button>
            </td>
        </tr>
    </tbody>
</table>
</form>
<br />
<hr />
<h1 style="text-align=center">Aniversariantes do dia!</h1>
<table class="table">
    <thead class="thead">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">Data de Aniversário</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var amigo in Model)
        {
            if (amigo.aniversario.Day == DateTime.Now.Day && amigo.aniversario.Month == DateTime.Now.Month)
            {
            <tr>
                <th scope="row">@amigo.AmigoId</th>
                <td>@amigo.nome</td>
                <td>@amigo.sobrenome</td>
                <td>@amigo.aniversario</td>
            </tr>
            }
        }
    </tbody>
</table>
<br />

<h4>Lista de amigos</h4>
<br />
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">Data de Aniversário</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var amigo in Model)
            {
                <tr>
                    <th scope="row">@amigo.AmigoId</th>
                    <td>@amigo.nome</td>
                    <td>@amigo.sobrenome</td>
                    <td>@amigo.aniversario</td>
                    <td>
                        <a href="/amigos/editar?id=@amigo.AmigoId">
                            Editar
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 20 20">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a>
                        &nbsp;
                        <a href="/amigos/excluir">
                            Excluir
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red" class="bi bi-trash-fill" viewBox="0 0 20 20">
                                <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                            </svg>
                        </a>
                    </td>
                </tr>
            }
    </tbody>
</table>


    
    